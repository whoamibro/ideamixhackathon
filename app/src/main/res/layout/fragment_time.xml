<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hist_name"
            android:src="@drawable/time"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|fill_horizontal"
                android:layout_marginLeft="120dp"
                android:layout_weight="1.46"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/timecountup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="00:30"
                    android:textAlignment="center"
                    android:textSize="30pt" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="30pt" />

                <TextView
                    android:id="@+id/fixedtime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="01:00"
                    android:textAlignment="center"
                    android:textSize="28pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1.46"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/patientstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:paddingRight="10dp"
                    android:src="@drawable/good" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:gravity="center">
            <Button
                android:layout_width="472px"
                android:layout_height="101px"
                android:id="@+id/min1"
                android:paddingRight="15dp"
                android:background="@drawable/min1"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/min3"
                android:layout_width="472px"
                android:layout_height="101px"
                android:background="@drawable/min3"
                android:paddingHorizontal="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                />

            <Button
                android:layout_width="472px"
                android:layout_height="101px"
                android:id="@+id/manual"
                android:paddingLeft="15dp"
                android:background="@drawable/manual"/>

        </LinearLayout>
    </LinearLayout>






</FrameLayout>
